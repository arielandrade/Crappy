{
    "version": "2.0.0",
    "tasks": [
        //linux
        {
            "label": "debug linux",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Crappy.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-r",
                "linux-x64",
                "--self-contained",
                "true",
                "-p:PublishReadyToRun=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "release linux",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Crappy.csproj",
                "-c",
                "Release",
                "-r",
                "linux-x64",
                "--self-contained",
                "true",
                "-p:PublishReadyToRun=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish linux",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Crappy.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c",
                "Release",
                "-r",
                "linux-x64",
                "--self-contained",
                "true",
                "-p:PublishReadyToRun=true"
            ],
            "problemMatcher": "$msCompile"
        },
        //windows
