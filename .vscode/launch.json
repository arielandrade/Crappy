{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [              
        //Linux
        {
            "name": "Linux debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "debug linux",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Debug/net5.0/linux-x64/Crappy.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            //"console": "internalConsole",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": false,
            "requireExactSource": false
        },
        {
            "name": "Linux release",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "release linux",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Release/net5.0/linux-x64/Crappy.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            //"console": "internalConsole",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": false
        },
        //Windows
        {
            "name": "Windows debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "debug windows",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Debug/net5.0/win-x64/Crappy.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            //"console": "internalConsole",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": false,
            "requireExactSource": false
        },
        {
            "name": "Windows release",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "release windows",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/bin/Release/net5.0/win-x64/Crappy.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            //"console": "internalConsole",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": false
        },
        //
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            //"processId": "${command:pickProcess}",
            "processName": "Crappy"
        }
    ]
}